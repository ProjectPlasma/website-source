---
import "$styles/theme.css";
---

<div id="container">

     <div id="footer">
         <div id="logo-img"><img alt="Logo" src="/logo_800_450.webp"></div>
        <div class="link-group">
            <h3>About Us</h3>
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/research">Research</a></li>
            </ul>
        </div>
        <div class="link-group">
            <h3>Media</h3>
            <ul>
                <li><a href="/news">News</a></li>
            </ul>
        </div>
        <div class="link-group">
            <h3>Socials</h3>
            <ul>
                <li><a href="https://www.linkedin.com/company/project-plasma/">LinkedIn</a></li>
                <li><a href="https://www.instagram.com/plasmasheffield/">Instagram</a></li>
            </ul>
        </div>
        <div class="link-group">
            <h3>Contact</h3>
            <ul>
                <li><a href="mailto:projectplasma@sheffield.ac.uk">projectplasma@sheffield.ac.uk</a></li>
                <li><a href="https://maps.app.goo.gl/ZyBkUpDFjN9gRpbS7">Dainton Building<br>
                    13 Brook Hill, Sheffield S3 7HF</a></li>
            </ul>
        </div>
    </div>

</div>

<style>
    #container {
        width: 100%;
        border-top: 1px solid var(--border-bg);
        background-color: var(--head-foot-bg);
    }
    
    #footer {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;

        padding: 50px 30px 50px 30px;
    }

    ul {
        list-style-type: none; 
        padding: 0;
        margin: 0;
    }

    .link-group {
        align-self: flex-start;
        text-align: center;

        width: 100%;
    }

    #logo-img {
        min-width: 50px;
        max-width: 200px;
    }

    #logo-img img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    h3 {
        color: var(--text-gray);
        font-weight: 500;
        font-size: 1.15em;
    }
    li {
        color: var(--text-active-dark);
    }
    li {
        margin-bottom: 4px;
    }


    /* if phone */
    @media (max-width: 800px) {
        #footer { flex-direction: column; }
    }

    a:visited,
    a:active, a {
        color: var(--text-active-dark);
        text-decoration: none;
    }
</style>

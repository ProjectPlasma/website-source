---
import "$styles/theme.css";
---

<div id="container">

     <div id="footer">
        <div id="logo-img">LOGO HERE</div>
        <div class="link-group">
            <h3>About Us</h3>
            <ul>
                <li>About Us</li>
                <li>The Team</li>
            </ul>
        </div>
        <div class="link-group">
            <h3>Media</h3>
            <ul>
                <li>News</li>
            </ul>
        </div>
        <div class="link-group">
            <h3>Socials</h3>
            <ul>
                <li>LinkedIn</li>
                <li>Website</li>
            </ul>
        </div>
        <div class="link-group">
            <h3>Contact</h3>
            <ul>
                <li>LinkedIn</li>
                <li>Email</li>
            </ul>
        </div>
    </div>

</div>

<style>
    #container {
        width: 100%;
        border-top: 1px solid var(--border-bg);
        background-color: var(--head-foot-bg);
    }
    
    #footer {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;

        padding: 50px 30px 50px 30px;
    }

    ul {
        list-style-type: none; 
        padding: 0;
        margin: 0;
    }

    .link-group {
        align-self: flex-start;
        text-align: center;

        width: 100%;
    }

    #logo-img {
        min-width: 200px;
    }

    h3 {
        color: var(--text-gray);
        font-weight: 500;
        font-size: 1.15em;
    }
    li {
        color: var(--text-active-dark);
    }
    li {
        margin-bottom: 4px;
    }


    /* if phone */
    @media (max-width: 800px) {
        #footer { flex-direction: column; }
    }
</style>

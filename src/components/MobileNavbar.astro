---
import "$styles/theme.css";
---

<div id="container">
    <div id="button-container">
        <a class="mobile-link">Home</a>
        <a class="mobile-link">Research</a>
        <a class="mobile-link">About Us</a>
        <a class="mobile-link">News</a>
        <a class="mobile-link">Contact Us</a>
    </div>
</div>

<style>
    #container {
        position: fixed;

        width: 100%;
        height: 100%;

        padding-top: 30px;

        display: flex;
        justify-content: center;

        background-color: white;
    }

    #button-container {
        width: 80%;

        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .mobile-link {
        position: relative;
        text-align: center;

        font-size: 1.3em;
        line-height: 2.5em;
    }

    .mobile-link:not(:last-child)::after {
        content: "";

        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        display: block;

        width: 120px;
        height: 1px;
        background: var(--border-bg);
    }

    a {
        color: var(--text-active-dark);
        text-decoration: none;
        text-align: center;

        transition: 0.1s;
        padding: 5px;
    }

    a:visited,
    a:active {
        color: var(--text-active-dark);
        text-decoration: none;
    }
</style>
